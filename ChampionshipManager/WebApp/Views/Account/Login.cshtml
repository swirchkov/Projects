@model WebApp.Models.Account.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="login-container">

    <div class="text-center login-header">

        <div class="login-header-title">

            Login

        </div>

    </div>

    <form method="post">

        <div class="login-body">

            <div class="form-group">

                <label class="col-lg-4 text-right login-label" for="Login">
                    Электронный адрес
                </label>

                <div class="col-lg-8 text-left no-paddings margin-bottom-20">
                    <input type="text" name="Login" id="Login" class="form-control" required />
                </div>

            </div>

            <div class="form-group">

                <label for="Password" class="col-lg-4 text-right login-label">
                    Пароль
                </label>

                <div class="col-lg-8 text-left no-paddings margin-bottom-20">
                    <input type="password" name="Password" id="Password" class="form-control" required/>
                </div>

            </div>

            <div class="form-group col-lg-offset-4">

                @Html.EditorFor(m => m.RememberMe)

                <label for="RememberMe" class="login-label">
                    Запомнить меня
                </label>

            </div>

        </div>

        <div class="login-footer text-center row">
            <div class="submit-btn row">
                <input type="submit" class="btn btn-success" value="Войти" />
            </div>

            <div class="row">
                <a href="/Account/Register" type="button" class="btn margin-top-20 register-login-link">
                    Создать новый аккаунт
                </a>
                <a href="/Account/RestorePassword" class="btn margin-top-20 forgot-password-login-link">
                    Забыли пароль
                </a>
            </div>
        </div>

    </form>

</div>

