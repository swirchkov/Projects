@model IEnumerable<BllPart.DTO.BookDTO>
@{ 
}
    <header class="text-center margin-top-50">

        <h1>
            Books, that you loaded to site
        </h1>

    </header>

    <div class="container">

        <div class="row">

            <div class="col-lg-9 main-page-book_container">

                @foreach (var book in Model)
                {
                    <div class="jumbotron book-view-container">
                        <img src="@book.ImagePath" width="100" height="80" alt="Book view" />

                        <span>
                            @book.Name
                        </span>

                        <div class="row">
                            <a class="col-lg-offset-2" asp-controller="Notes" asp-action="Index" 
                           asp-route-bookId="@book.BookId">
                                Read book
                            </a>
                            <span>|</span>
                            <a href="#" onclick="deleteBook(@book.BookId)">
                                <i class="glyphicon glyphicon-remove">

                                </i> 
                            </a>
                        </div>
                    </div>
                }

            </div>

        </div>

    </div>

    <div class="container-fluid bg-info addBookContainer">

        <div class="row">

            <div class="col-lg-12 text-center">
                <h3 class="font-style-load-book-header">
                    <a asp-action="CreateBook" asp-controller="Home" class="btn-link load-link">
                        Загрузить книгу
                    </a>
                </h3>
            </div>

        </div>
    </div>

<script src="/js/site.js"></script>

